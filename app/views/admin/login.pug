extends ../layout.pug
  
append css
    link(rel="stylesheet", href="/css/admin/login.css")
append js
    script(src='/validation/jquery.validate.min.js')
    script(src='/js/admin/login.js')
block content
    .reg-bg
        .container   
            .row.justify-content-center.mt10
                .col-md-6
                    .card
                        .card-body
                            h3.text-center  欢迎登录账号
                            p 请输入你的用户名和密码
                            
                        form#loginForm
                            .form-group.mx-4.my-4
                                input#username(name='username',class='form-control',type='text',placeholder='请输入用户名',data-container='body',data-toggle='popover',data-placement='right',data-content='用户名不符合要求')
                            .form-group.mx-4.my-4
                                input#password(name='password',class='form-control',type='password',placeholder='请输入密码',data-container='body',data-toggle='popover',data-placement='right',data-content='密码不符合要求')
                            .form-group.row.mx-4.no-gutters
                                .col-sm-9
                                    input#code.mt-1(name='code',class='form-control',type='text',placeholder='验证码，注意大小写!')
                                .col-sm-3(id='captcha',data-container='body',data-toggle='popover',data-placement='right',data-content='验证码不符合要求') 
                            .form-group.mx-4.my-4
                                button#reg(type='submit',class=['btn','btn-success','btn-block','btn-lg']) 登录
                        .card-body
                            a(href="/admin/register" class=['card-link','ml-2']) 注册
                            a(href="#" class=['card-link','ml-2']) 找回密码

