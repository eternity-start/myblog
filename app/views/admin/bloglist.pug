extends ../layout.pug

append css
    link(rel="stylesheet", href="/css/admin/bloglist.css")
append js
    script(src='/validation/jquery.validate.min.js')
    script(src='/js/admin/bloglist.js')
block content

    include ../include/nav.pug
    .container
        .row
            nav.col-md-3.col-xl-2.d-none.d-md-block.bg-light.sidebar
                .sidebar-sticky
                    ul.nav.flex-column
                        li.nav-item
                            a.nav-link(href='/admin/userinfo')
                                i.fas.fa-file-alt.mr-2
                                span 修改个人资料
                        li.nav-item.mt-4
                            a.nav-link(href='/admin/password')
                                i.fas.fa-key.mr-2
                                span 修改登录密码
                        li.nav-item.mt-4 
                            a.nav-link(href='/admin/portrait')
                                i.fas.fa-user.mr-2
                                span 更换个人头像
                        li.nav-item.mt-4
                            a.nav-link(href='/admin/category')  
                                i.fas.fa-money-check.mr-2 
                                span 博客分类管理
                        li.nav-item.mt-4
                            a.nav-link(href='/admin/publish')
                                i.fas.fa-plus-square.mr-2
                                span 发表个人博客 
                        li.nav-item.mt-4
                            a.nav-link(href='/admin/bloglist')
                                i.fas.fa-print.mr-2
                                span 博客列表管理
            main.col-xl-10.col-md-9.col-md-auto(role='main')
                nav(aria-label='breadcrumb')   
                    ol.breadcrumb
                        li.breadcrumb-item
                            a(href="#") 个人微博
                        li.breadcrumb-item
                            a(href="#") 个人中心
                        li.breadcrumb-item.active(aria-current='page') 博客列表管理
                .card
                    .card-body
                        div(class=['list-group', 'list-group-flush'])
                            each article in articles
                                div(class=['list-group-item', 'list-group-item-action'])
                                    a.card-link(href=`/blog/detail/${article._id}`, target='_blank')
                                        h5= article.title
                                    div(class=['d-flex', 'align-items-center'])
                                        time= moment(article.publishTime).format('YYYY年MM月DD日')
                                        div(class=['ml-5', 'd-flex', 'align-items-center']) 阅读
                                            span(class=['badge', 'badge-pill', 'badge-primary', 'ml-2'])= article.reading
                                        a(href=`/admin/publish/${article._id}/${page}`, class=['badge', 'badge-info','ml-auto','mr-2']) 编辑
                                        a(href='javascript:void(0);', class=['badge', 'badge-danger','mr-300px'], onclick=`delBlog("${article._id}", "${page}")`) 删除
                                    p.my-2= article.summary
        nav(aria-label=['page', 'navigation'])
          ul(class=['pagination', 'justify-content-center', 'mt-4'])
            if page == 1
              li(class=['page-item', 'disabled'])
                a.page-link(href='#') 上一页
            else
              li(class=['page-item'])
                a.page-link(href=`/admin/bloglist/${page-1}`) 上一页
            - var i = 1
            while (i <= totalPage)
              if (i == page)
                li(class=['page-item', 'active'])
                  a(class=['page-link'], href='#')= i++
              else
                li.page-item
                  a.page-link(href=`/admin/bloglist/${i}`)= i++
            if page == totalPage
              li(class=['page-item', 'disabled'])
                a.page-link(href='#') 下一页
            else
              li(class=['page-item'])
                a.page-link(href=`/admin/bloglist/${page+1}`) 下一页
        
                        
                                        

    footer.container-fluid.bg-dark
        .row
            .col-md-12   
                p.text-white-50.text-center &copy; 个人博客 |  沪ICP备888888888号              
